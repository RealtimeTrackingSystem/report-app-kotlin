<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.ReportDetailActivity">

    <TextView
            android:text="Report Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:textStyle="bold"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:visibility="visible">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" android:visibility="gone">
                <TextView
                        android:text="Report ID:"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" android:id="@+id/reportIdLbl" android:layout_weight="1"
                        android:textSize="14sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/reportIdTxt" android:layout_weight="1"
                        tools:text="5c04c609414846000f927c3f" android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                <TextView
                        android:text="Title:"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" android:id="@+id/titleLbl" android:layout_weight="1"
                        android:textSize="14sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/titleTxt" android:layout_weight="1"
                        tools:text="Test Title" android:textSize="18sp"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Description:"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" android:id="@+id/desriptionLbl" android:layout_weight="1"
                        android:textSize="14sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/descriptionTxt"
                        android:layout_weight="1"
                        tools:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout. The point of using Lorem Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content here', making it look like readable English. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and a search for 'lorem ipsum' will uncover many web sites still in their infancy. Various versions have evolved over the years, sometimes by accident, sometimes on purpose (injected humour and the like)."/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                <TextView
                        android:text="Reporter:"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" android:id="@+id/reporterLbl" android:layout_weight="1"
                        android:textSize="14sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/reporterTxt" android:layout_weight="1"
                        tools:text="John Doe" android:textSize="18sp"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Coordinates:"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" android:id="@+id/coordinatesLbl" android:layout_weight="1"
                        android:textSize="14sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/coordinatesTxt" android:layout_weight="1"
                        tools:text="(Long 120.232323, Lat: 14.23424244)" android:textSize="18sp"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                <TextView
                        android:text="Host:"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" android:id="@+id/hostLbl" android:layout_weight="1"
                        android:textSize="14sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/hostTxt" android:layout_weight="1"
                        tools:text="Barangay Payatas" android:textSize="18sp"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                <TextView
                        android:text="Category:"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" android:id="@+id/categoryLbl" android:layout_weight="1"
                        android:textSize="14sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/categoryTxt" android:layout_weight="1"
                        tools:text="Fire" android:textSize="18sp"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                <TextView
                        android:text="Urgency:"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" android:id="@+id/urgencyLbl" android:layout_weight="1"
                        android:textSize="14sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/urgencyTxt" android:layout_weight="1"
                        tools:text="LOW" android:textSize="18sp"/>
            </LinearLayout>


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                <TextView
                        android:text="Status:"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" android:id="@+id/statusLbl" android:layout_weight="1"
                        android:textSize="14sp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/statusTxt" android:layout_weight="1"
                        tools:text="NEW" android:textSize="18sp"/>
            </LinearLayout>
            <TextView
                    android:text="Images:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/imgLbl" android:layout_weight="1"/>
            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp" tools:visibility="visible" android:visibility="gone"
                    android:id="@+id/imagesScrollView">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                              android:orientation="horizontal">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/img1" tools:srcCompat="@drawable/app_bg"
                            android:layout_margin="10dp" tools:visibility="visible"
                            android:visibility="gone" android:scaleType="fitCenter"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/img2" tools:srcCompat="@drawable/app_bg"
                            android:layout_margin="10dp" tools:visibility="visible"
                            android:visibility="gone" android:scaleType="fitCenter"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/img3" tools:srcCompat="@drawable/app_bg"
                            android:layout_margin="10dp" tools:visibility="visible"
                            android:visibility="gone" android:scaleType="fitCenter"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/img4" tools:srcCompat="@drawable/app_bg"
                            android:layout_margin="10dp" tools:visibility="visible"
                            android:visibility="gone" android:scaleType="fitCenter"/>
                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>
    <Button
            android:text="Mark as void"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="@android:color/white"
            android:background="@drawable/primary_btn"/>
</android.support.constraint.ConstraintLayout>